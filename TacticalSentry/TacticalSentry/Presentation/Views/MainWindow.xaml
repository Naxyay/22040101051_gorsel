<Window x:Class="TacticalSentry.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TacticalSentry.Presentation.ViewModels"
        Title="TACTICAL SENTRY" Height="720" Width="1280"
        Background="Black" WindowState="Maximized" WindowStyle="None" Topmost="False">

    <Window.DataContext>
        <vm:DashboardViewModel/>
    </Window.DataContext>

    <Grid>
        <Image Source="{Binding CurrentImage}" Stretch="Fill"/>

        <Border HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="30" Background="#CC000000" CornerRadius="10" 
                BorderBrush="#00FF41" BorderThickness="1" Padding="15">
            <StackPanel Width="280">
                <TextBlock Text="KOMUTA BAĞLANTISI" Foreground="#00FF41" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <TextBlock Text="KAMERA KAYNAĞI SEÇ:" Foreground="Gray" FontSize="10" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding CameraList}" 
                          DisplayMemberPath="Name"
                          SelectedValuePath="Url"
                          SelectedValue="{Binding SelectedCameraUrl}"
                          Background="#222" Foreground="Black" Padding="5" Margin="0,0,0,10" Height="30"/>

                <TextBlock Text="VEYA MANUEL URL:" Foreground="Gray" FontSize="10"/>
                <TextBox Text="{Binding SelectedCameraUrl, UpdateSourceTrigger=PropertyChanged}" 
                         Background="#222" Foreground="White" BorderBrush="#444" Padding="5" 
                         FontFamily="Consolas" Margin="0,2,0,15"/>

                <Button Command="{Binding StartCommand}" Content="SİSTEMİ BAŞLAT" 
                        Background="#004400" Foreground="White" FontWeight="Bold" 
                        BorderThickness="0" Height="35" Cursor="Hand" Margin="0,0,0,10"/>

                <TextBlock Text="{Binding StatusMessage}" Foreground="Yellow" 
                           HorizontalAlignment="Center" TextWrapping="Wrap" FontWeight="Bold" FontSize="11"/>
            </StackPanel>
        </Border>

        <Button Command="{Binding StopCommand}" 
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="30" Background="#CC330000" BorderBrush="Red" BorderThickness="2"
                Padding="15,10" Cursor="Hand">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="KAPAT" Foreground="Red" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                <TextBlock Text=" ❌" FontSize="16" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="30">

            <Button Command="{Binding OpenSettingsCommand}" 
                    Background="#CC333333" BorderBrush="#00FF41" BorderThickness="1"
                    Padding="15,10" Margin="0,0,15,0" Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚙️" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="GELİŞMİŞ AYARLAR" Foreground="White" FontWeight="Bold" FontFamily="Consolas"/>
                        <TextBlock Text="Admin Paneli" Foreground="Gray" FontSize="10" FontFamily="Consolas"/>
                    </StackPanel>
                </StackPanel>
            </Button>

            <Button Command="{Binding OpenFolderCommand}" 
                    Background="#CC111111" BorderBrush="#00FF41" BorderThickness="2"
                    Padding="15,10" Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📂" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <StackPanel>
                        <TextBlock Text="KANITLAR" Foreground="White" FontWeight="Bold" FontFamily="Consolas"/>
                        <TextBlock Text="Kayıtlar >" Foreground="Gray" FontSize="10" FontFamily="Consolas"/>
                    </StackPanel>
                </StackPanel>
            </Button>
        </StackPanel>

    </Grid>
</Window>