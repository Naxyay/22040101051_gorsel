<Window x:Class="TacticalSentry.Presentation.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GÜVENLİK GİRİŞİ" Height="450" Width="800"
        WindowStyle="None" ResizeMode="NoResize" Background="Black" WindowStartupLocation="CenterScreen">

    <Grid>
        <Border BorderBrush="#00FF41" BorderThickness="2" Margin="50" CornerRadius="15" Background="#111">
            <StackPanel VerticalAlignment="Center" Width="300">
                <TextBlock Text="TACTICAL SENTRY C2" Foreground="#00FF41" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock Text="PERSONEL ID / KULLANICI ADI:" Foreground="Gray" Margin="0,5"/>
                <TextBox x:Name="TxtUser" Background="#222" Foreground="White" BorderBrush="#444" Height="30" VerticalContentAlignment="Center" Padding="5"/>

                <TextBlock Text="GÜVENLİK KODU / ŞİFRE:" Foreground="Gray" Margin="0,15,0,5"/>
                <PasswordBox x:Name="TxtPass" Background="#222" Foreground="White" BorderBrush="#444" Height="30" VerticalContentAlignment="Center" Padding="5"/>

                <Button Content="SİSTEME BAĞLAN" Click="BtnLogin_Click"
                        Background="#004400" Foreground="White" FontWeight="Bold" Height="40" Margin="0,30,0,0" Cursor="Hand"/>

                <Button Content="KAPAT" Click="BtnExit_Click" Background="Transparent" Foreground="#660000" BorderThickness="0" Margin="0,10" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>